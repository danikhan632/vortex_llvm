{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run llc Command",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/llc",
            "args": [
                "-O0",
                "-march=riscv32",
                "-mcpu=generic-rv32",
                "-mattr=+m,+a,+f,+vortex",
                "${workspaceFolder}/foo/simple.ll",
                "-o",
                "${workspaceFolder}/foo/kernel.s"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "moduleLoad": false
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
